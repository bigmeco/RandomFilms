<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="bigi.randomfilms.Dannie">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:id="@+id/sar"
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/fon"
            tools:layout_editor_absoluteY="0dp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:layout_toEndOf="@+id/sar"
        android:layout_toRightOf="@+id/sar"
        android:text="TextView" />

    <TextView
        android:id="@+id/original_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_margin="15dp"
        android:layout_toEndOf="@+id/sar"
        android:layout_toRightOf="@+id/sar"
        android:text="TextView" />

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sar"
        android:layout_margin="15dp"
        android:layout_toLeftOf="@+id/space"
        android:layout_toStartOf="@+id/space"
        android:text="dddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd" />

    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/original_title"
        android:layout_margin="15dp"
        android:layout_toEndOf="@+id/sar"
        android:layout_toRightOf="@+id/sar"
        android:text="TextView" />

    <Space
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/space" />

</RelativeLayout>
